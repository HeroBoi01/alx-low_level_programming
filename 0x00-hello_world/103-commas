#!/bin/bash

# List all files and directories (including hidden ones) with their file types
file_list=$(ls -Ap)

# Sort the list alphabetically, considering only digits and letters
sorted_list=$(echo "$file_list" | grep -E "^[A-Za-z0-9.]+$" | LC_COLLATE=C sort -df)

# Move the directories "." and ".." to the beginning of the list
final_list=$(echo -e ".\n..\n$sorted_list")

# Print the final list with commas separating the entries
echo "$final_list" | paste -sd ","

exit 0
